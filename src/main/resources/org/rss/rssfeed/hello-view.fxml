                            <font>
                                <Font name="Tahoma" size="17.0" />
                            </font>
                        </Label>
                        <Label prefHeight="55.0" prefWidth="698.0" text="your favorite websites and creators, collect articles, and discover inspiring content">
                            <StackPane.margin>
                                <Insets top="80.0" />
                            </StackPane.margin>
                            <font>
                                <Font name="Tahoma" size="17.0" />
                            </font>
                        </Label>
