    <center>

        <HBox prefHeight="410.0" prefWidth="678.0" spacing="10" BorderPane.alignment="CENTER">
            <children>
                <StackPane prefHeight="571.0" prefWidth="864.0">
                    <children>
                        <ImageView fx:id="homeImageView" fitHeight="560.0" fitWidth="850.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../../../../images/home.png" />
                            </image>
                        </ImageView>
                        <Label prefHeight="67.0" prefWidth="233.0" text="EXPLORE ">
                            <StackPane.margin>
                                <Insets bottom="300.0" left="-530.0" />
                            </StackPane.margin>
                            <font>
                                <Font name="Tahoma" size="53.0" />
                            </font>
                        </Label>
                        <Label prefHeight="44.0" prefWidth="375.0" text="Your Own News FEED" textFill="#e70a0a">
                            <StackPane.margin>
                                <Insets bottom="250.0" left="100.0" />
                            </StackPane.margin>
                            <font>
                                <Font name="Tahoma" size="35.0" />
                            </font>
                        </Label>
