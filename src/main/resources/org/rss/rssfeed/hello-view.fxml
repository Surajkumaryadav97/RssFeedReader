<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import java.lang.String?>
<BorderPane onDragDetected="#onHelloButtonClick" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.rss.rssfeed.HelloController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color:#265073;" BorderPane.alignment="CENTER_RIGHT">
            <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="128.0" BorderPane.alignment="CENTER_RIGHT">
                <padding>
                    <Insets right="10" />
                </padding>
                <children>
                    <Label prefHeight="35.0" prefWidth="193.0" style="-fx-font-size: 24px;" text="RFR" textFill="WHITE">
                        <padding>
                            <Insets left="10" />
                        </padding>
                    </Label>
                </children>
            </HBox>
            <ButtonBar prefHeight="40.0" prefWidth="200.0" />
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
                <buttons>
                    <Button mnemonicParsing="false" onAction="#onHelloButtonClick"  prefHeight="25.0" prefWidth="68.0" stylesheets="@style.css" text="Login" textFill="BLACK"
                    >
                        <styleClass>
                            <String fx:value="animated-button" />
                            <String fx:value="loginBtn" />
                        </styleClass>
                    </Button>
                    <Button mnemonicParsing="false" onAction="#onRegisterButtonClick" prefHeight="26.0" prefWidth="64.0" stylesheets="@style.css" text="Signup" textFill="BLACK">
                        <styleClass>
                            <String fx:value="cancelBtn" />
                            <String fx:value="animated-button" />
                        </styleClass>
                    </Button>
                </buttons>
            </ButtonBar>
        </HBox>
    </top>

</BorderPane>