<BorderPane prefHeight="650.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.rss.rssfeed.HelloController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="74.0" prefWidth="850.0" style="-fx-background-color: #638889;" BorderPane.alignment="CENTER_RIGHT">
            <children>
                <HBox prefHeight="79.0" prefWidth="682.0">
                    <children>
                        <ImageView fx:id="logoImageView" fitHeight="79.0" fitWidth="131.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../../../../images/logo_.png" />
                            </image></ImageView>
                        <Label prefHeight="82.0" prefWidth="250.0" text="RSS Feed Reader" textFill="#fcfafa">
                            <font>
                                <Font name="Tahoma" size="31.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <Button fx:id="loginbtn" onAction="#login" prefHeight="25.0" prefWidth="68.0" stylesheets="@style.css" text="Login" textFill="BLACK">
                    <styleClass>
                        <String fx:value="animated-button" />
                        <String fx:value="loginBtn" />
                    </styleClass>
                </Button>
                <Button fx:id="regbtn" onAction="#register" prefHeight="26.0" prefWidth="64.0" stylesheets="@style.css" text="Signup" textFill="BLACK">
